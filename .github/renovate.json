{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePatch",
    ":separateMajorReleases",
    ":dependencyDashboard"
  ],
  "rangeStrategy": "bump",
  "timezone": "UTC",
  "schedule": ["before 4am on monday"],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "description": "Group Next + ESLint Next",
      "matchPackagePatterns": ["^next$", "^eslint-config-next$", "^@next/eslint-plugin-next$"] ,
      "groupName": "nextjs",
      "automerge": false
    },
    {
      "description": "Group OpenAI SDK + Agents",
      "matchPackagePatterns": ["^openai$", "^@openai/agents", "^@openai/agents-core"],
      "groupName": "openai",
      "automerge": false
    },
    {
      "description": "Group Zod + Resolvers",
      "matchPackagePatterns": ["^zod$", "^@hookform/resolvers$"],
      "groupName": "zod-and-resolvers",
      "automerge": false
    },
    {
      "description": "Group Vitest core",
      "matchPackagePatterns": ["^vitest$", "^@vitest/coverage-v8$"] ,
      "groupName": "vitest",
      "automerge": false
    },
    {
      "description": "Group Supabase client libs",
      "matchPackagePatterns": ["^@supabase/supabase-js$", "^@supabase/ssr$"] ,
      "groupName": "supabase",
      "automerge": true
    },
    {
      "description": "Group Cloudinary SDK",
      "matchPackagePatterns": ["^cloudinary$"] ,
      "groupName": "cloudinary",
      "automerge": true
    },
    {
      "description": "Group Tailwind toolchain",
      "matchPackagePatterns": ["^tailwindcss$", "^@tailwindcss/postcss$"] ,
      "groupName": "tailwind",
      "automerge": true
    },
    {
      "description": "Group Vercel KV",
      "matchPackagePatterns": ["^@vercel/kv$"] ,
      "groupName": "vercel-kv",
      "automerge": false
    },
    {
      "description": "Default: auto-merge minor/patch when checks pass",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}

