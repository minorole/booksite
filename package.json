{
  "name": "booksite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0 --report-unused-disable-directives",
    "lint:ci": "eslint . --quiet --max-warnings=0 --report-unused-disable-directives",
    "lint:filesize": "node scripts/check-file-lines.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:types": "supabase gen types typescript --linked --schema public > src/types/supabase.generated.ts",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}\" \"scripts/**/*.{js,mjs,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}\" \"scripts/**/*.{js,mjs,ts}\"",
    "format:docs": "prettier --write \"doc/**/*.{md,mdx}\" \"emails/**/*.md\"",
    "format:docs:check": "prettier --check \"doc/**/*.{md,mdx}\" \"emails/**/*.md\"",
    "check:ci": "npm run format:check && npm run lint:ci && npm run typecheck && npm run test && npm run build",
    "cloudinary:purge-temp": "node scripts/cloudinary-purge-temp.mjs"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@openai/agents": "^0.2.1",
    "@openai/agents-core": "^0.2.1",
    "@openai/agents-openai": "^0.2.1",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@vercel/kv": "^3.0.0",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "gsap": "^3.12.5",
    "lucide-react": "^0.545.0",
    "next": "^16.0.1",
    "next-themes": "^0.4.3",
    "ogl": "^1.0.11",
    "openai": "^6.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.180.0",
    "typewriter-effect": "^2.22.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^4.0.7",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.37.0",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "jsdom": "^24.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  }
}
